{
  "name": "git-hub-profile",
  "version": "1.0.0",
  "description": "Just my profile",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": ">=28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.pygramer78.profile",
    "productName": "git-hub-profile",
    "files": [
      "src/**/*",
      "index.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "installer"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "hacker.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "img/efuefe.png"
    }
  }
}
